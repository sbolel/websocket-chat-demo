{
  "name": "@sbolel/ws",
  "version": "1.0.0",
  "description": "WebSocket Implementation",
  "main": "bin/server",
  "keywords": [
    "RFC-6455",
    "WebSocket",
    "WebSockets"
  ],
  "license": "MIT",
  "homepage": "https://github.com/sbolel/ws",
  "author": {
    "name": "Sinan Bolel",
    "url": "https://sinanbolel.com"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sbolel/ws.git"
  },
  "bugs": {
    "url": "https://github.com/sbolel/ws/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "engines": {
    "node": ">= 12.0.0",
    "npm": ">= 6.0.0"
  },
  "files": [
    "index.js",
    "bin/server",
    "lib/*.js",
    "www/*"
  ],
  "scripts": {
    "debug": "run-p debug-*",
    "debug-node": "nodemon --inspect bin/server",
    "debug-browser": "open http://localhost:8000",
    "start": "node bin/server",
    "test": "npm-run-all -p standard eslint -s jest",
    "standard": "standard --fix \"**/*.js\" \"index.js\"",
    "eslint": "eslint '**/*.js' -c eslintrc.yml",
    "jest": "jest --config='./jest.config.js' --coverage",
    "patch": "git add --patch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s test patch"
    }
  },
  "nodemonConfig": {
    "delay": "2500",
    "ignore": [
      "coverage",
      "docs/*",
      "test/*"
    ],
    "watch": [
      "index.js",
      "lib/*.js"
    ]
  },
  "standard": {
    "globals": [],
    "parser": "babel-eslint"
  },
  "dependencies": {
    "@babel/register": "^7.10.4",
    "chalk": "^4.1.0",
    "node-static": "^0.7.11",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.4.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha": "^7.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "standard": "^14.3.4",
    "supertest": "^4.0.2",
    "yarn-run-all": "^3.1.1"
  },
  "resolutions": {
    "node-static/optimist/minimist": "^1.2.0"
  }
}
